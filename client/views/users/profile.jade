.row
  .col-xs-4
  .col-xs-4
    h2#header Profile:
    form(name='profileForm', novalidate)
      .form-group
        label: h4(for='age') Your Age
        input.form-control#age(type='number', name='age', ng-model='user.age')
      .form-group
        label: h4(for='sex') Sex
        select.form-control#sex(type='text', name='sex', ng-model='user.sex')
          option Male
          option Female
      .form-group
        label: h4(for='email') Email
        input.form-control#handle(type='text', name='email', ng-model='user.email')
      .form-group
        label: h4(for='twitter') Twitter Handle
        input.form-control#handle(type='text', name='twitter', ng-model='user.twitter')
      .form-group
        button.btn.btn-primary#startButton(ng-hide='isEdit' ng-click='submit(user)') Save Profile
      .form-group
        button.btn.btn-primary#startButton(ng-show='isEdit' ng-click='submit(user)') Save Edit
